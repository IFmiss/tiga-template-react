{
  "compilerOptions": {
    "baseUrl": ".",
    "target": "es5",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    {{#if useTest}}
    "module": "commonjs",
    {{/if}}
    {{#unless useTest}}
    "module": "esnext",
    {{/unless}}
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "jsx": "react",
    "typeRoots": [
      "node_modules/@types"
    ],
    "paths": {
      "@api/*": ["src/api/*"],
      "@assets/*": ["src/assets/*"],
      "@components/*": ["src/components/*"],
      "@constance/*": ["src/constance/*"],
      "@store/*": ["src/store/*"],
      "@styles/*": ["src/styles/*"],
      "@views/*": ["src/views/*"],
      "@utils/*": ["src/utils/*"],
      "@router/*": ["src/router/*"],
    }
  },
  "include": [
    "src/**/*",
    "global.d.ts"
  ]
}